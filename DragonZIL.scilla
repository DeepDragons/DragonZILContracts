  some_bal <- owned_token_count[address];
  balance =
    match some_bal with
    | Some bal => bal
    | None => Uint256 0
    end;
  msg_to_sender = { _tag : "balanceOfCallBack"; _recipient : _sender;
                    _amount : Uint128 0; balance : balance};
  msgs = one_msg msg_to_sender;
  send msgs
end

