let add_owner_count =
  fun (some_current_count: Option Uint256) =>
    match some_current_count with
    | Some current_count =>
      builtin add current_count one
    | None => one
    end

let sub_owner_count =
fun (some_current_count: Option Uint256) =>
  match some_current_count with
  | Some current_count =>
    let is_zero = builtin eq current_count zero in
    match is_zero with
    | True => zero
    | False =>
        builtin sub current_count one
    end
  | None => zero
  end

(* Check if a sender is an operator of the owner, approved for the given ID *)
(* or is the owner of the token                                             *)
let is_approved_or_owner =
  fun (is_owner: Bool) =>
  fun (is_approved: Bool) =>
  fun (is_approved_for_all: Bool) =>
    let is_owner_or_approved =  orb is_owner is_approved in
    orb is_owner_or_approved is_approved_for_all

let random =
  fun (entropy: Uint256) =>
    fun (balance: Uint128) =>
      fun (amount: Uint128) =>
      let entropyHash = builtin keccak256hash entropy in
      let amountHash = builtin keccak256hash amount in
      let balancehash = builtin keccak256hash balance in
      let rhash = builtin concat amountHash entropyHash in
      let rhash1 = builtin concat rhash balancehash in
      let rhash2 = builtin keccak256hash rhash1 in
      builtin to_uint256 rhash2

(* Error events *)
type Error =
  | CodeNotAuthorised
  | CodeNotFound
  | CodeTokenExists
  | CodeUnexpectedError
  | CodeStageError

let make_error_event =
  fun (result : Error) =>
    let result_code =
      match result with
      | CodeNotAuthorised    => Int32 -1
      | CodeNotFound         => Int32 -2
      | CodeTokenExists      => Int32 -3
      | CodeUnexpectedError  => Int32 -4
      | CodeStageError       => Int32 -5
      end
    in
    { _eventname : "Error"; code : result_code }

(* Custom ADT storing twitter_id, recipient_address, tweet_id, hashtags *)
